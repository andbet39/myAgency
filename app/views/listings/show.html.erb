<p id="notice"><%= notice %></p>

<h2><%= @listing.title %></h2>
<div class="row">
    <div class="col-md-12">
        <div class="x_panel">
            <div class="x_content">
                <div class="row">
                    <div class="col-md-6">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">Contact Info</h3>
                            </div>
                            <div class="panel-body">
                                <table class="table">
                                    <tr>
                                        <td>Link</td>
                                        <td>
                                            <a href="<%= @listing.link %>">Link</a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Tel</td>
                                        <td><%= @listing.tel %></td>
                                    </tr>
                                    <tr>
                                        <td>Tel 2</td>
                                        <td><%= @listing.tel2 %></td>
                                    </tr>
                                    <tr>
                                        <td>Email</td>
                                        <td><%= @listing.email %></td>
                                    </tr>
                                </table>

                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">Property Info</h3>
                            </div>
                            <div class="panel-body">
                                <table class="table">
                                    <tr>
                                        <td>Mt</td>
                                        <td><%= @listing.mt %></td>
                                    </tr>
                                    <tr>
                                        <td>Prezzo</td>
                                        <td><%= @listing.price %></td>
                                    </tr>
                                    <tr>
                                        <td>Origine</td>
                                        <td><%= @listing.origin %></td>
                                    </tr>
                                    <tr>
                                        <td>Zona</td>
                                        <td><%= @listing.zona %></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <h3>Descrizione</h3>
                        <%= @listing.description %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="x_panel">
            <div class="x_content">
                <h3>Interazioni
                    <a href="/my_interaction/new?listing_id=<%= @listing.id %>&inttype=Tel">
                        <button class="btn btn-success">Nuova</button>
                    </a>
                </h3>
                <table class="table table-bordered">
                    <thead>
                        <th>Id</th>
                        <th>Creata</th>
                        <th>Nome</th>
                        <th>Tipo</th>
                        <th>Voto</th>
                    </thead>
                    <tbody>
                        <% @listing.interactions.each() do | interaction | %>

                        <tr>
                            <td>
                                <%= interaction.id %></td>
                            <td>
                                <%= interaction.created_at.to_formatted_s(:long) %></td>
                            <td>
                                <%= interaction.name %></td>
                            <td>
                                <%= interaction.inttype %></td>
                            <td>
                                <%= interaction.vote %></td>
                        </tr>
                        <% end %>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%= link_to 'Edit', edit_listing_path(@listing) %>
|
<%= link_to 'Back', listings_path %>
