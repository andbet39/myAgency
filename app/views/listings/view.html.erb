<div class="right_col" role="main">
    <div class="row top_tiles">
        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="tile-stats">
                <div class="icon">
                    <i class="fa fa-home"></i>
                </div>
                <div class="count"><%= @search.listings.count %></div>
                <h3>Annunci</h3>
            </div>
        </div>
        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="tile-stats">
                <div class="icon">
                    <i class="fa fa-euro"></i>
                </div>
                <div class="count"><%= @avg_pricemq %></div>
                <h3>Euro/Mq</h3>
            </div>
        </div>
        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="tile-stats">
                <div class="icon">
                    <i class="fa fa-exclamation-circle"></i>
                </div>
                <div class="count"><%=  @newcount  %></div>
                <h3>Nuovi Annunci</h3>
            </div>
        </div>
    </div>
    <% if !current_user.ispro %>
      <div class="row">
        <div class="col-md-12">
          <h3>Per vedere pi√π annunci sottoscrivi il piano MyAgencyCall! Pro! dalla pagina del <%=link_to "Tuo Profilo", edit_profile_path(current_user.profile.id) %></h3>
        </div>
      </div>
    <% end %>

    <div class="">

        <div class="page-title">
            <div class="title_left">
                <h3>Annunci per
                    <%= @search.keyword.strip %> in zona <%= @search.zone.name.strip %>
                </h3>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12">
                <div class="x_panel">
                    <div class="x_content">

                            <!--  <listings v-bind:searchid="<%= @search.id %>"></listings> -->
                            <table id="listing_table" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                      <th>New</th>
                                      <th>Title</th>
                                      <th>Price</th>
                                      <th>Mq</th>
                                      <th>Price/Mq</th>
                                      <th>Tel.</th>
                                      <th>Link</th>
                                      <th>Source</th>
                                      <th></th>
                                    </tr>

                                </thead>
                                <tbody>
                                    <% @results.each() do |s| %>
                                    <tr>
                                        <% if s.is_new %>
                                        <td ><i style="color:red" class="fa fa-exclamation red" aria-hidden="true"></i></td>
                                        <% else %>
                                          <td >-</td>
                                        <% end %>
                                        <td><%= link_to s.listing.title , s.listing %></td>
                                        <td><%= s.listing.price %></td>
                                        <td><%= s.listing.mt %></td>
                                        <td><%= s.listing.pricemq %></td>
                                        <td>
                                            <a href="tel:<%= s.listing.tel %>"><%= s.listing.tel %></a>
                                        </td>
                                        <td>
                                            <a href="<%= s.listing.link %>">Link</a>
                                        </td>
                                        <td><%= s.listing.origin %></td>
                                        <td>
                                            <a href="/my_interaction/new?listing_id=<%= s.listing.id %>&inttype=Tel">
                                                <button class="btn btn-sm btn-success"><%= s.listing.interactions.length %>
                                                    <i class="fa fa-phone" aria-hidden="true"></i>
                                                </button>
                                            </a>
                                        </td>
                                    </tr>
                                    <% end %>
                                </tbody>
                            </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
