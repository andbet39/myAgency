<div class="wrapper">
<div class="register-background">
    <div class="filter-black"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1 ">
                <div class="register-card">
                    <h3 class="title">Benvenuto</h3>
                    <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

                    <%= f.email_field :email, autofocus: true %>
                    <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %>
                        characters minimum)</em>
                    <% end %><br/>

                    <%= f.password_field :password, autocomplete: "off" %>

                    <%= f.password_field :password_confirmation, autocomplete: "off" %>
                    <%= f.submit "Registrami", :class => "btn btn-danger btn-block"%>

                    <% end %>
                    <div class="forgot">
                        <a href="#" class="btn btn-simple btn-danger">Forgot password?</a>
                    </div>
                </div>

            </div>
        </div>
        <div class="footer register-footer text-center">
            <h6>&copy; 2017, made with
                <i class="fa fa-heart heart"></i>
                by Andrea Terzani</h6>
        </div>
    </div>
</div>
